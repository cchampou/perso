---
import { Image } from "astro:assets";
import Button from "./Button.astro";
import Cake from "./icons/Cake.astro";
import Location from "./icons/Location.astro";
import pp from "../assets/pp.png";
import Studies from "./icons/Studies.astro";
import Speech from "./icons/Speech.astro";
import Desk from "./icons/Desk.astro";
import Ambulance from "./icons/Ambulance.astro";
import Camera from "./icons/Camera.astro";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Person",
  givenName: "Clément",
  familyName: "Champouillon",
  jobTitle: "Chief Technology Officer",
  email: "website@champouillon.com",
  nationality: {
    "@type": "Country",
    name: "France",
  },
  gender: {
    "@type": "GenderType",
    name: "Male",
  },
  worksFor: {
    "@type": "Organization",
    name: "Komia",
    email: "contact@komia.io",
    url: "https://komia.io",
  },
  knowsLanguage: [
    {
      "@type": "Language",
      name: "French",
    },
    {
      "@type": "Language",
      name: "English",
    },
    {
      "@type": "Language",
      name: "German",
    },
  ],
};
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

<style>
  #hero {
    position: sticky;
    top: 0;
    padding: 16px;
    font-size: 14px;
    border: solid 1px var(--borderColor);
    border-radius: var(--borderRadius);
    max-width: 250px;
    gap: 8px;
    flex-direction: column;
    display: flex;
    flex-shrink: 0;
    flex-grow: 1;
  }
  @media (max-width: 768px) {
    #hero {
      flex-direction: column;
    }
  }

  .field {
    display: flex;
    align-items: center;
    gap: 4px;
  }
</style>

<div id="hero">
  <div style="text-align: center;">
    <Image
      src={pp}
      alt="Clément Champouillon"
      style="width: 128px; border-radius: 50%; margin: auto; aspect-ratio: 1 / 1; object-fit: cover; object-position: top; border: 2px solid var(--borderColor);"
    />
  </div>
  <h1>Clément Champouillon</h1>
  <span class="field">
    <Cake size={24} />
    15th September
  </span>
  <span class="field"><Location size={24} />Lyon, France</span>
  <span class="field"><Speech size={24} />French, English, German</span>
  <span class="field"><Studies size={24} />42 School</span>
  <span class="field"><Desk size={24} />Software Engineer</span>
  <span class="field"><Ambulance size={24} />First aid</span>
  <span class="field"><Camera size={24} /><a href="/plane-spotting">Plane spotting</a></span>
  <p style="text-align: center;">
    <Button onClick="window.location.href='/blog'" label="Blog" />
    <Button onClick="window.location.href='/contact'" label="Contact me" />
    <Button onClick="window.location.href='/cv'" label="CV" />
  </p>
</div>
