---
import BasePage from "../layouts/BasePage.astro";
import HomeContent from "../content/homepage.md";
import Identity from "../components/Identity.astro";
---

<style>
  .layout {
    display: flex;
    flex-direction: row;
    gap: 16px;
  }
  @media (max-width: 768px) {
    .layout {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
<BasePage
  title="Clément Champouillon - Software Developer"
  description="Personal website of Clément Champouillon, a software developer based in Lyon, France."
>
  <div class="layout">
    <Identity />
    <div>
      <HomeContent />
    </div>
  </div>
</BasePage>
